{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node", // 确保模块解析策略为 Node
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["src/*"],
      "@sobot/form-editor": ["src/index.ts"],
      "@sobot/form-editor/*": ["./src/*", "*"],
      "@sobot/form-editor/es/*": ["src/*"],
      "@sobot/form-editor/lib/*": ["src/*"]
    }
  },
  "include": [".dumirc.ts", "src/**/*"]
}
